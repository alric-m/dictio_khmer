<div class="panel">
  <div class="panel-heading">Dictionnaire</div>
  <div class="panel-body">
    <div class="table-responsive">
      <table id="datatable" class="table table-striped table-hover">
        <thead>
          <tr>
            <th><strong>Définition francaise</strong></th>
            <th><strong>Définition anglaise</strong></th>
            <th><strong>Définition khmer</strong></th>
            <th><strong>Transcription phonétique</strong></th>
            <th><strong>Type</strong></th>
            <th><strong>Thème</strong></th>
            <th><strong>Éditer</strong></th>
            <th><strong>Supprimer</strong></th>
          </tr>
        </thead>
        <tbody>
          <% @words.each do |word| %>
            <tr>

              <td class="table-entry"><%= word.definition_fr || "Non renseigné" %></td>
              <td class="table-entry"><%= word.definition_en || "Non renseigné" %></td>
              <td class="table-entry"><%= word.definition_kh || "Non renseigné" %></td>
              <td class="table-entry"><%= word.phonetic || "Non renseigné" %></td>
              <td class="table-entry"><%= word.word_type || "Non renseigné" %></td>
              <td class="table-entry"><%= raw word.tag_list.join(', ') %></td>
              <td>
                <%= link_to edit_word_path(word), class: "btn btn-default" do %>
                  <em class="fa fa-pencil"></em>
                  <span>Éditer</span>
                <% end %>
              </td>
              <td>
                <%= link_to word, method: :delete, class: "btn btn-danger", data: { confirm: 'Etes-vous sûr de vouloir supprimer ce post-it ?' } do %>
                  <em class="fa fa-trash"></em>
                  <span>Supprimer</span>
                <% end %>
              </td>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
