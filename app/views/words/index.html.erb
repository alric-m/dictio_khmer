<div class="panel">
  <div class="panel-heading">Dictionnaire</div>
  <div class="panel-body">
    <table id="datatable" class="table table-striped table-hover">
      <thead>
        <tr>
          <th><strong><%= t('activerecord.attributes.word.definition_fr') %></strong></th>
          <th><strong><%= t('activerecord.attributes.word.definition_en') %></strong></th>
          <th><strong><%= t('activerecord.attributes.word.definition_kh') %></strong></th>
          <th><strong><%= t('activerecord.attributes.word.definition_ph') %></strong></th>
          <th><strong><%= t('activerecord.attributes.word.word_type') %></strong></th>
          <th><strong><%= t('activerecord.attributes.word.tag_list') %></strong></th>
          <th><strong><%= t('actions.edit') %></strong></th>
          <th><strong><%= t('actions.delete') %></strong></th>
        </tr>
      </thead>
      <tbody>
        <% @words.each do |word| %>
          <tr>
            <td class="table-entry"><%= word.definition_fr || "Non renseigné" %></td>
            <td class="table-entry"><%= word.definition_en || "Non renseigné" %></td>
            <td class="table-entry"><%= word.definition_kh || "Non renseigné" %></td>
            <td class="table-entry"><%= word.definition_ph || "Non renseigné" %></td>
            <td class="table-entry"><%= word.word_type || "Non renseigné" %></td>
            <td class="table-entry"><%= raw word.fr_tag_list.join(', ') %></td>
            <td>
              <%= link_to edit_word_path(word), class: "btn btn-default" do %>
                <em class="fa fa-pencil"></em>
                <span><%= t('actions.edit') %></span>
              <% end %>
            </td>
            <td>
              <%= link_to word, method: :delete, class: "btn btn-danger", data: { confirm: 'Etes-vous sûr de vouloir supprimer ce post-it ?' } do %>
                <em class="fa fa-trash"></em>
                <span><%= t('actions.delete') %></span>
              <% end %>
            </td>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
